# ASI:One API Key for Agentverse chat integration
ASI_ONE_API_KEY=

# Orchestrator Agent identity
ORCHESTRATOR_AGENT_NAME=EV-Optimizer-Orchestrator
ORCHESTRATOR_SEED_PHRASE="replace-with-a-secure-seed-phrase"

# Horizon configuration (hours)
HORIZON_HOURS=24

# Use remote sub-agents (if hosted on Agentverse) or local services
USE_REMOTE_AGENTS=false

# Optional remote agent addresses (if USE_REMOTE_AGENTS=true)
TELEMETRY_AGENT_ADDRESS=
PRICE_AGENT_ADDRESS=
KG_AGENT_ADDRESS=
OPTIMIZER_AGENT_ADDRESS=

# Networking / hosting
AGENT_PORT=8000
# If you have a public reverse proxy / tunnel, set the HTTPS URL here for registration (e.g., https://your-domain/)
PUBLIC_ENDPOINT=
# Use mailbox transport instead of direct endpoint
USE_MAILBOX=false

# Default objective: cost | peak
OBJECTIVE_DEFAULT=cost

# Knowledge Graph backend
USE_METTA=false

# Optimizer backend: greedy | milp
BACKEND=greedy

# Private mode (Ocean C2D stub)
PRIVATE_MODE=false
